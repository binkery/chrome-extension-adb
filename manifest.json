 {
    "name": "adb",
    "version": "1.0",
    "description": "Build an Extension!",
    "background": {
        "page":"background.html",
        "persistent": true
    },
    "permissions" :[
        "tabs","webRequest","webRequestBlocking","<all_urls>","contextMenus","storage"
    ],
    "manifest_version": 2,
    "browser_action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [{
	     "matches": ["http://*/*","https://*/*"], 
	     "js": ["content_scripts.js"], 
	     "run_at": "document_start",
	     "all_frames": true 
	}],
    "options_page":"options.html"

}
