 {
    "name": "AD Block",
    "version": "1.0",
    "description": "Build an Extension!",
    "background": {
        "scripts":["background.js"],
        "persistent": true
    },
    "permissions" :[
        "tabs","webRequest","webRequestBlocking","<all_urls>","contextMenus","storage"
    ],
    "manifest_version": 2,
    "browser_action": {
        "default_popup": "popup.html"
    },
    "options_page":"options.html"
}
